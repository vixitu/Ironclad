include ../includes/header.pug
script(src='/js/sidebar.js', defer)
script(src='/js/guild.js', defer)
link(rel='stylesheet', href='/css/sidebar.css')
body
    include ../includes/sidebar.pug

    #sidebarExtension.bg-light
        header.text-center.pt-4
            .large-icon.bg-white.round 
                if guild.icon
                    img.round(src=guild.iconURL({dynamic: true, size: 128}), alt=guild.name)
                else
                    p.abbr #{guild.nameAcronym}
            h4.pt-2 #{guild.name}
        .tabs.navbar-nav
            .category Modules
            a#hosting.cursor-pointer #[i.fas.fa-gavel.pe-1.text-muted] Hosting
            a#music.cursor-pointer #[i.fa-solid.fa-music.pe-1.text-muted] Music
            a#others.cursor-pointer #[i.fa-solid.fa-question.pe-2.text-muted] Others

    include ../includes/navbar.pug

    include modules/overview
    include modules/hosting
    include modules/music
    include modules/others